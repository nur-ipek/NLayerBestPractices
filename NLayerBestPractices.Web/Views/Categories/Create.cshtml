@model CategoryDto
@{ 
    ViewData["Title"] = "Create";
}
<h1>Kategori Ekle</h1>
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create"> @*tag helper ---> asp-action, asp-validation-summary  ---> modellerimizi bağlama işlemi gerçekleştiriyoruz...*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name">Kategori</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            @*her input için bir form-group oluşturuyoruz*@
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary"/>


            </div>

        </form>
       





    </div>



</div>