@model IEnumerable<CategoryDto>


@{

    ViewData["Title"] = "Home Page";
}
<h2>KATEGORİLER</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Kategori Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>

                </td>
            </tr>
         }
        </tbody>


</table>

<div class="table text-center">

    
</div>
